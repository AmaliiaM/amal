#include <iostream>
#include <string>
using namespace std;

class Person {
public:
    string name;
    int age;
    string gender;
    string occupation;
    string address;

    void introduce() {
        cout << "Мене звуть " << name << ", я маю " << age << " років. Я " << gender << " та працюю як " << occupation << ". Моя адреса: " << address << endl;
    }

    void work() {
        cout << name << " працює в даний час." << endl;
    }

    void sleep() {
        cout << name << " спить зараз." << endl;
    }

    void eat(string food) {
        cout << name << " їсть " << food << "." << endl;
    }

    void study() {
        cout << name << " вивчає зараз." << endl;
    }
};

class Room {
public:
    int width;
    int length;
    int height;
    string color;
    bool hasWindow;

    void describe() {
        cout << "Кімната має розміри " << width << "м x " << length << "м x " << height << "м. Колір стін: " << color;
        if (hasWindow) {
            cout << ". Є вікно.";
        } else {
            cout << ". Немає вікна.";
        }
        cout << endl;
    }

    void ventilate() {
        cout << "Кімната провітрюється зараз." << endl;
    }

    void clean() {
        cout << "Кімната прибирається зараз." << endl;
    }

    void switchLight(bool on) {
        if (on) {
            cout << "Світло увімкнене." << endl;
        } else {
            cout << "Світло вимкнене." << endl;
        }
    }

    void repaint(string newColor) {
        cout << "Стіни кімнати перефарбовуються у " << newColor << " зараз." << endl;
    }
};

class MobilePhone {
public:
    string brand;
    string model;
    string color;
    int storage;
    string operatingSystem;

    void call(string number) {
        cout << "Дзвінимо на номер " << number << " зараз." << endl;
    }

    void sendMessage(string recipient, string message) {
        cout << "Відправляємо повідомлення на номер " << recipient << ": " << message << endl;
    }

    void browseInternet(string website) {
        cout << "Переглядаємо веб-сайт " << website << " зараз." << endl;
    }

    void installApp(string appName) {
        cout << "Встановлюємо додаток " << appName << " зараз." << endl;
    }

    void takePhoto() {
        cout << "Робимо фото зараз." << endl;
    }
};

class Car {
public:
    string brand;
    string model;
    int year;
    string color;
    string licensePlate;

    void start() {
        cout << "Автомобіль запускається зараз." << endl;
    }

    void stop() {
        cout << "Автомобіль зупиняється зараз." << endl;
    }

    void accelerate() {
        cout << "Автомобіль розганяється зараз." << endl;
    }

    void brake() {
        cout << "Автомобіль гальмує зараз." << endl;
    }

    void honk() {
        cout << "Автомобіль сигналить зараз." << endl;
    }
};

class Book {
public:
    string title;
    string author;
    int year;
    string genre;
    int numberOfPages;

    void open() {
        cout << "Книгу відкрито зараз." << endl;
    }

    void close() {
        cout << "Книгу закрито зараз." << endl;
    }

    void turnPage() {
        cout << "Перегортаємо сторінку книги зараз." << endl;
    }

    void bookmark() {
        cout << "Додаємо закладку зараз." << endl;
    }

    void read() {
        cout << "Читаємо книгу зараз." << endl;
    }
};

int main() {
    // Ваш код для створення об'єктів та викликання методів тут
    return 0;
}
